<UserControl x:Class="WPF.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <WrapPanel>
        <Button Style="{DynamicResource ButtonStyleMenuOther}" Click="FoldButton_Click" >
            <Image Source="/Image/Fold.png"/>
        </Button>
        <Button Style="{DynamicResource ButtonStyleMenuOther}" Click="ExpandButton_Click" >
            <Image Source="/Image/Expand.png"/>
        </Button>
        <Button Style="{DynamicResource ButtonStyleMenuClose}" Click="CloseButton_Click" >
            <Image Source="/Image/Cross.png"/>
        </Button>
    </WrapPanel>
</UserControl>
